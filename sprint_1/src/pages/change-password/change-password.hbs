<div class="profile-page">
  <div class="profile-page__back-button">
    {{> Link page="profile" text="Назад" className="profile-page__back-link"}}
  </div>
  <div class="profile-page__content">
    <div class="profile-page__header">
      <img src="../assets/photo.png" alt="Profile Photo" class="profile-page__photo">
    </div>
    <div class="profile-info">
      <h1 class="profile-info__name">Изменить пароль</h1>
      <div class="profile-info__item">
        <span class="profile-info__label">Старый пароль:</span>
        <input type="password" class="profile-info__value" placeholder="*****">
      </div>
      <div class="profile-info__item">
        <span class="profile-info__label">Новый пароль:</span>
        <input type="password" class="profile-info__value" placeholder="*****">
      </div>
      <div class="profile-info__item">
        <span class="profile-info__label">Повторить пароль:</span>
        <input type="password" class="profile-info__value" placeholder="*****">
      </div>
    </div>
    <div class="profile-page__actions">
      <button class="profile-page__link profile-page__link--save">Сохранить</button>
    </div>
  </div>
</div>
